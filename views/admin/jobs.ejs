<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>İş İlanları Yönetimi</h2>
        <a href="/admin/jobs/new" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni İş İlanı
        </a>
    </div>

    <!-- Search -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form action="/admin/jobs" method="GET" class="row g-3">
                <div class="col-md-6">
                    <input type="text" class="form-control" name="search" placeholder="İş ilanı başlığı veya açıklama ara..." value="<%= search %>">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Ara</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Jobs Table -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="jobsTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>İlan Başlığı</th>
                            <th>Şirket</th>
                            <th>Konum</th>
                            <th>Son Başvuru</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (jobs && jobs.length > 0) { %>
                            <% jobs.forEach(job => { %>
                                <tr>
                                    <td><%= job.id %></td>
                                    <td><%= job.title %></td>
                                    <td><%= job.company %></td>
                                    <td><%= job.location %></td>
                                    <td><%= new Date(job.deadline).toLocaleDateString('tr-TR') %></td>
                                    <td>
                                        <span class="badge bg-<%= job.is_active ? 'success' : 'secondary' %>">
                                            <%= job.is_active ? 'Aktif' : 'Pasif' %>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-info" 
                                                    onclick="editJob(<%= job.id %>)">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-danger" 
                                                    onclick="deleteJob(<%= job.id %>)">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="7" class="text-center">Henüz iş ilanı bulunmamaktadır.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">İş İlanı Silme</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Bu iş ilanını silmek istediğinizden emin misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Sil</button>
            </div>
        </div>
    </div>
</div>

<script>
function editJob(jobId) {
    window.location.href = `/admin/jobs/${jobId}/edit`;
}

function deleteJob(jobId) {
    const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
    const confirmBtn = document.getElementById('confirmDelete');
    
    confirmBtn.onclick = () => {
        fetch(`/admin/jobs/${jobId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                window.location.reload();
            } else {
                alert('İş ilanı silinirken bir hata oluştu.');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Bir hata oluştu.');
        });
        
        modal.hide();
    };
    
    modal.show();
}

// Initialize DataTable
$(document).ready(function() {
    $('#jobsTable').DataTable({
        language: {
            url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json'
        }
    });
});
</script> 