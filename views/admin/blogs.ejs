<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Blog Yönetimi</h2>
        <a href="/admin/blogs/new" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Blog Yazısı
        </a>
    </div>

    <!-- Search -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form action="/admin/blogs" method="GET" class="row g-3">
                <div class="col-md-6">
                    <input type="text" class="form-control" name="search" placeholder="Blog başlığı veya içerik ara..." value="<%= search %>">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Ara</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Blogs Table -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="blogsTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Başlık</th>
                            <th>Yazar</th>
                            <th>Kategori</th>
                            <th>Yayın Tarihi</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (blogs && blogs.length > 0) { %>
                            <% blogs.forEach(blog => { %>
                                <tr>
                                    <td><%= blog.id %></td>
                                    <td><%= blog.title %></td>
                                    <td><%= blog.author_name %></td>
                                    <td><%= blog.category %></td>
                                    <td><%= new Date(blog.published_at).toLocaleDateString('tr-TR') %></td>
                                    <td>
                                        <span class="badge bg-<%= blog.is_published ? 'success' : 'secondary' %>">
                                            <%= blog.is_published ? 'Yayında' : 'Taslak' %>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-info" 
                                                    onclick="editBlog(<%= blog.id %>)">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-danger" 
                                                    onclick="deleteBlog(<%= blog.id %>)">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="7" class="text-center">Henüz blog yazısı bulunmamaktadır.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Blog Yazısı Silme</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Bu blog yazısını silmek istediğinizden emin misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Sil</button>
            </div>
        </div>
    </div>
</div>

<script>
function editBlog(blogId) {
    window.location.href = `/admin/blogs/${blogId}/edit`;
}

function deleteBlog(blogId) {
    const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
    const confirmBtn = document.getElementById('confirmDelete');
    
    confirmBtn.onclick = () => {
        fetch(`/admin/blogs/${blogId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                window.location.reload();
            } else {
                alert('Blog yazısı silinirken bir hata oluştu.');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Bir hata oluştu.');
        });
        
        modal.hide();
    };
    
    modal.show();
}

// Initialize DataTable
$(document).ready(function() {
    $('#blogsTable').DataTable({
        language: {
            url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json'
        }
    });
});
</script> 