<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Eğitimler</h1>
        <a href="/admin/trainings/new" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Eğitim
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <form class="form-inline" method="GET">
                <div class="input-group">
                    <input type="text" class="form-control" name="search" placeholder="Eğitim ara..." value="<%= search %>">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Eğitim Adı</th>
                            <th>Başlangıç Tarihi</th>
                            <th>Bitiş Tarihi</th>
                            <th>Konum</th>
                            <th>Kapasite</th>
                            <th>Katılımcı Sayısı</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% trainings.forEach(training => { %>
                            <tr>
                                <td><%= training.title %></td>
                                <td><%= new Date(training.start_date).toLocaleString('tr-TR') %></td>
                                <td><%= new Date(training.end_date).toLocaleString('tr-TR') %></td>
                                <td><%= training.location %></td>
                                <td><%= training.capacity %></td>
                                <td><%= training.participant_count || 0 %></td>
                                <td>
                                    <a href="/admin/trainings/<%= training.id %>/edit" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#deleteModal<%= training.id %>">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>

                            <!-- Delete Modal -->
                            <div class="modal fade" id="deleteModal<%= training.id %>" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel<%= training.id %>" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="deleteModalLabel<%= training.id %>">Eğitimi Sil</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <p><%= training.title %> eğitimini silmek istediğinizden emin misiniz?</p>
                                            <p class="text-danger">Bu işlem geri alınamaz!</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                                            <form action="/admin/trainings/<%= training.id %>/delete" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-danger">Sil</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 